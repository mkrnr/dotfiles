# name workspace
# bindsym $mod+ctrl+Shift+n exec i3-input -F 'rename workspace to "%s"' -P 'New name: '
set $renameWorkspace Rename workspace
mode "$renameWorkspace" {

    bindsym 1 exec i3-msg 'rename workspace to 1', mode "default"
    bindsym 2 exec i3-msg 'rename workspace to 2', mode "default"
    bindsym 3 exec i3-msg 'rename workspace to 3', mode "default"
    bindsym 4 exec i3-msg 'rename workspace to 4', mode "default"
    bindsym 5 exec i3-msg 'rename workspace to 5', mode "default"
    bindsym 6 exec i3-msg 'rename workspace to 6', mode "default"
    bindsym 7 exec i3-msg 'rename workspace to 7', mode "default"
    bindsym 8 exec i3-msg 'rename workspace to 8', mode "default"
    bindsym 9 exec i3-msg 'rename workspace to 9', mode "default"
    bindsym 0 exec i3-msg 'rename workspace to 10', mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+ctrl+Shift+n mode "$renameWorkspace"


